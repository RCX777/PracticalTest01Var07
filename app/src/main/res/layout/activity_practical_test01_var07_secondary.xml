<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_gravity="center">
            <!-- First row, first column -->
            <TextView
                android:id="@+id/value1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/value1" />
            <!-- First row, second column -->
            <TextView
                android:id="@+id/value2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@string/value2" />
            <!-- Second row, first column -->
            <TextView
                android:id="@+id/value3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/value3" />
            <!-- Second row, second column -->
            <TextView
                android:id="@+id/value4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:text="@string/value4" />
        </GridLayout>
        <!-- Button for Sum below the GridLayout -->
        <Button
            android:id="@+id/buttonSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sum"
            android:layout_marginTop="16dp" />

        <!-- Button for Product below the Sum button -->
        <Button
            android:id="@+id/buttonProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>